{
  "name": "innkeeper",
  "version": "0.1.0",
  "private": true,
  "description": "InnKeeper - A Next.js dungeon crawler with ElizaOS agents",
  "scripts": {
    "dev": "pnpm --filter @innkeeper/web dev",
    "build": "pnpm -r build",
    "test": "powershell -ExecutionPolicy Bypass -File scripts/test-all.ps1 run",
    "test:watch": "powershell -ExecutionPolicy Bypass -File scripts/test-all.ps1 --watch",
    "test:e2e": "pnpm --filter @innkeeper/web test:e2e",
    "test:e2e:watch": "pnpm --filter @innkeeper/web test:e2e:watch",
    "test:e2e:ui": "pnpm --filter @innkeeper/web test:e2e:ui",
    "test:e2e:headed": "pnpm --filter @innkeeper/web test:e2e:headed",
    "test:watch:all": "powershell -ExecutionPolicy Bypass -File scripts/test-all.ps1 --watch",
    "test:all": "powershell -ExecutionPolicy Bypass -File scripts/test-all.ps1 run && pnpm --filter @innkeeper/web test:e2e",
    "test:output": "pnpm --filter @innkeeper/web test:output",
    "test:watch:file": "pnpm --filter @innkeeper/web test:watch:file",
    "network:local": "pnpm --filter @innkeeper/web network:local",
    "network:testnet": "pnpm --filter @innkeeper/web network:testnet",
    "lint": "pnpm -r lint",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=20.9.0",
    "pnpm": ">=8.0.0"
  }
}
